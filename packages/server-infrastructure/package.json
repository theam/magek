{
  "name": "@booster-ai/server-infrastructure",
  "version": "0.0.1",
  "description": "Handle the Booster running process of the local runtime",
  "keywords": [
    "server-infrastructure"
  ],
  "author": "Boosterin Labs SLU",
  "homepage": "https://boosterframework.com",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boostercloud/booster.git"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "dependencies": {
    "@booster-ai/common": "workspace:^0.0.1",
    "@booster-ai/server": "workspace:^0.0.1",
    "fastify": "5.3.3",
    "@fastify/websocket": "11.1.0",
    "fastify-sse-v2": "4.2.1",
    "@fastify/cors": "11.0.1",
    "node-schedule": "2.1.0",
    "tslib": "2.4.0",
    "@effect-ts/core": "0.60.4"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --quiet --fix \"**/*.ts\"",
    "build": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "prepack": "tsc -b tsconfig.json",
    "test:provider-local-infrastructure": "npm run test",
    "test": "tsc --noEmit && BOOSTER_ENV=test nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\""
  },
  "bugs": {
    "url": "https://github.com/boostercloud/booster/issues"
  },
  "devDependencies": {
    "@booster-ai/eslint-config": "workspace:^0.0.1",
    "@types/chai": "5.2.2",
    "@types/chai-as-promised": "8.0.2",
    "@types/mocha": "10.0.10",
    "@types/node": "22.15.21",
    "@types/node-schedule": "2.1.7",
    "@types/sinon": "17.0.4",
    "@types/sinon-chai": "4.0.0",
    "chai": "5.2.0",
    "chai-as-promised": "8.0.1",
    "@faker-js/faker": "7.6.0",
    "mocha": "11.7.1",
    "nyc": "17.1.0",
    "rimraf": "6.0.1",
    "sinon": "21.0.0",
    "sinon-chai": "4.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.8.3"
  }
}
