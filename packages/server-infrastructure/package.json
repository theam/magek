{
  "name": "@magek/server-infrastructure",
  "version": "0.0.1",
  "description": "Handle the Magek running process of the local runtime",
  "keywords": [
    "server-infrastructure"
  ],
  "author": "Boosterin Labs SLU",
  "homepage": "https://magek.ai",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theam/magek.git"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "dependencies": {
    "@magek/common": "workspace:^0.0.1",
    "@magek/server": "workspace:^0.0.1",
    "fastify": "5.6.2",
    "@fastify/websocket": "11.1.0",
    "fastify-sse-v2": "4.2.1",
    "@fastify/cors": "11.0.1",
    "node-schedule": "2.1.0",
    "tslib": "2.8.1",
    "@effect-ts/core": "0.60.5"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --quiet --fix \"**/*.ts\"",
    "build": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "prepack": "tsc -b tsconfig.json",
    "test:provider-local-infrastructure": "npm run test",
    "test": "tsc --noEmit -p tsconfig.test.json && MAGEK_ENV=test c8 mocha --forbid-only \"test/**/*.test.ts\""
  },
  "bugs": {
    "url": "https://github.com/theam/magek/issues"
  },
  "devDependencies": {
    "@magek/eslint-config": "workspace:^0.0.1",
    "@types/chai": "5.2.2",
    "@types/chai-as-promised": "8.0.2",
    "@types/mocha": "10.0.10",
    "@types/node": "22.17.1",
    "@types/node-schedule": "2.1.7",
    "@types/sinon": "17.0.4",
    "@types/sinon-chai": "4.0.0",
    "chai": "5.2.0",
    "chai-as-promised": "8.0.1",
    "@faker-js/faker": "7.6.0",
    "mocha": "11.7.1",
    "c8": "^10.1.3",
    "rimraf": "6.0.1",
    "sinon": "21.0.0",
    "sinon-chai": "4.0.0",
    "tsx": "^4.19.2",
    "typescript": "5.8.3"
  }
}
