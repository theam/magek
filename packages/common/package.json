{
  "name": "@booster-ai/common",
  "version": "0.0.1",
  "description": "Contains Booster common helpers used by the core and provider packages",
  "keywords": [
    "framework-common-helpers"
  ],
  "author": "Boosterin Labs SLU",
  "homepage": "https://boosterframework.com",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boostercloud/booster.git"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --quiet --fix \"**/*.ts\"",
    "build": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "test:helpers": "npm run test",
    "test": "tsc --noEmit -p tsconfig.test.json && nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "prepack": "tsc -b tsconfig.json"
  },
  "bugs": {
    "url": "https://github.com/boostercloud/booster/issues"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "dependencies": {
    "tslib": "2.4.0",
    "class-transformer": "~0.5.1",
    "execa": "9.6.0",
    "effect": "3.17.3"
  },
  "devDependencies": {
    "@booster-ai/eslint-config": "workspace:^0.0.1",
    "@booster-ai/metadata": "workspace:^0.0.1",
    "@types/chai": "5.2.2",
    "@types/chai-as-promised": "8.0.2",
    "@types/mocha": "10.0.10",
    "@types/node": "22.15.21",
    "@types/rewire": "2.5.28",
    "@types/sinon": "17.0.4",
    "@types/sinon-chai": "4.0.0",
    "@types/uuid": "10.0.0",
    "chai": "5.2.0",
    "chai-as-promised": "8.0.1",
    "mocha": "11.7.1",
    "nyc": "17.1.0",
    "rewire": "8.0.0",
    "rimraf": "6.0.1",
    "sinon": "21.0.0",
    "sinon-chai": "4.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.8.3",
    "@faker-js/faker": "7.6.0",
    "fast-check": "4.1.1",
    "graphql": "16.6.0"
  }
}
