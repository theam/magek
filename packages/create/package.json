{
  "name": "create-booster-ai",
  "version": "0.0.1",
  "description": "Create Booster AI applications with one command",
  "main": "dist/cli.js",
  "bin": {
    "create-booster-ai": "dist/cli.js"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --quiet --fix \"**/*.ts\"",
    "build": "tsup src/cli.ts --format cjs --target node22 --outDir dist --clean",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "prepack": "npm run build",
    "test:create": "npm run test",
    "test": "mocha test/**/*.test.ts"
  },
  "keywords": [
    "booster",
    "booster-ai",
    "scaffold",
    "generator",
    "cli"
  ],
  "author": "Boosterin Labs SLU",
  "license": "Apache-2.0",
  "dependencies": {
    "degit": "2.8.4",
    "prompts": "2.4.2",
    "kleur": "4.1.5",
    "globby": "14.1.0"
  },
  "devDependencies": {
    "@booster-ai/eslint-config": "workspace:^0.0.1",
    "@types/node": "22.15.21",
    "@types/prompts": "2.4.9",
    "@types/chai": "5.2.2",
    "@types/mocha": "10.0.10",
    "@types/sinon": "17.0.4",
    "chai": "5.2.0",
    "mocha": "11.7.1",
    "sinon": "21.0.0",
    "ts-node": "10.9.2",
    "tsup": "8.0.0",
    "typescript": "5.8.3",
    "@types/degit": "~2.8.6",
    "rimraf": "6.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
