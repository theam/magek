{
  "name": "@magek/cli",
  "description": "CLI of the Magek Framework, the next level of abstraction for cloud-native applications",
  "version": "0.0.6",
  "author": "Boosterin Labs SLU",
  "homepage": "https://magek.ai",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "magek": "./bin/run"
  },
  "bugs": "https://github.com/theam/magek/issues",
  "dependencies": {
    "@magek/common": "workspace:^0.0.6",
    "@oclif/core": "4.8.0",
    "@oclif/plugin-help": "6.2.36",
    "@oclif/plugin-plugins": "5.4.55",
    "chalk": "5.6.2",
    "execa": "9.6.1",
    "fp-ts": "2.16.11",
    "fs-extra": "11.3.3",
    "inflected": "2.1.0",
    "inquirer": "13.2.1",
    "mustache": "4.2.0",
    "ora": "9.1.0",
    "ts-morph": "27.0.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@magek/eslint-config": "workspace:^0.0.6",
    "@oclif/test": "4.1.16",
    "@types/chai": "5.2.3",
    "@types/chai-as-promised": "8.0.2",
    "@types/fs-extra": "11.0.4",
    "@types/inflected": "2.1.3",
    "@types/mocha": "10.0.10",
    "@types/mustache": "4.2.6",
    "@types/node": "22.19.7",
    "@types/sinon": "21.0.0",
    "@types/sinon-chai": "4.0.0",
    "chai": "6.2.2",
    "chai-as-promised": "8.0.2",
    "copyfiles": "2.4.1",
    "mocha": "11.7.5",
    "c8": "^10.1.3",
    "rimraf": "6.1.2",
    "sinon": "21.0.1",
    "sinon-chai": "4.0.1",
    "tsx": "^4.19.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "oclif"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "oclif": {
    "commands": {
      "strategy": "explicit",
      "target": "./dist/commands/index.js",
      "identifier": "COMMANDS"
    },
    "bin": "magek",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "jitPlugins": {
      "@magek/adapter-nedb": "^0.0.2"
    },
    "hooks": {
      "command_not_found": "./dist/hooks/command_not_found/custom-parse"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theam/magek.git"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --quiet --fix \"**/*.ts\"",
    "build": "tsc -b tsconfig.json && copyfiles -f src/templates/*.stub dist/templates",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "prepack": "tsc -b tsconfig.json",
    "test:cli": "npm run test",
    "test": "tsc --noEmit -p tsconfig.test.json && c8 mocha --config .mocharc.json --forbid-only  \"test/**/*.test.ts\""
  },
  "types": "lib/index.d.ts"
}
