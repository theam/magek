{
  "compilerOptions": {
    "baseUrl": "./packages",
    "declaration": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "target": "ES2022",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "lib": ["ES2022"]
  }
}
